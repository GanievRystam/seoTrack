generator client {
  provider = "prisma-client-js"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())

  projects  Project[]
}

model Project {
  id        String   @id @default(cuid())
  userId    String
  name      String
  url       String
  createdAt DateTime @default(now())

  description   String?
  alerts        Int      @default(0)
  lastIncidentAt DateTime?
  metrics       Json     @default("{}")
  incidents Incident[]
  user      User     @relation(fields: [userId], references: [id])
  checkRuns CheckRun[]
}
model Incident {
  id          String   @id
  projectId   String?
  projectName String
  metric      String
  level       String
  timeText    String
  createdAt   DateTime @default(now())

  project     Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([createdAt])
}


model CheckRun {
  id         String      @id @default(cuid())
  projectId  String
  status     CheckStatus @default(QUEUED)
  createdAt  DateTime    @default(now())
  startedAt  DateTime?
  finishedAt DateTime?
  error      String?

  project    Project         @relation(fields: [projectId], references: [id])
  metrics    MetricSnapshot?
  scripts    ScriptSnapshot?
}

model MetricSnapshot {
  id        String  @id @default(cuid())
  checkRunId String @unique

  performanceScore Float?
  lcp              Float?
  cls              Float?
  inp              Float?

  rawJson Json?

  checkRun CheckRun @relation(fields: [checkRunId], references: [id])
}

model ScriptSnapshot {
  id        String  @id @default(cuid())
  checkRunId String @unique

  scripts Json

  checkRun CheckRun @relation(fields: [checkRunId], references: [id])
}

enum CheckStatus {
  QUEUED
  RUNNING
  SUCCESS
  FAIL
}
